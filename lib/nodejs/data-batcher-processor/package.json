        "@types/aws-lambda": "^8.10.77",
        "@types/node": "^18.7.2",
        "concurrently": "^7.2.2",
        "esbuild": "^0.14.48",
        "ts-node": "^9.0.0",
        "typescript": "^4.7"
    },
    "prettier": {
        "printWidth": 120
    }
}
